@model BoardGameWithLastDisplaysViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>BoardGame</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.MinPlayers)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MinPlayers)
        </dd>
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.MaxPlayers)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaxPlayers)
        </dd>
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.MinRecommendedAge)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MinRecommendedAge)
        </dd>
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.LastDisplays)
        </dt>
        @for (var index = 0; index < Model.LastDisplays.Length; index++)
        {
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastDisplays[index])
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.BoardGameId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>